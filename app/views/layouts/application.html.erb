  </div><!-- #headerbar -->
  	<div class="clear"> </div>
  <div id="nav_l">
      <img src="images/header_spike_left.png">
  </div><!-- #nav_l -->
  <div id="nav_r">
    <img src="images/header_spike_right.png">
  </div><!-- #nav_r -->
    <div class="clear"> </div>
  <div id="tabs">
    <ul>
      <li id="tab-home"></li>
      <li id="tab-submit"></li>
      <li id="tab-how-to"></li>
    </ul>
  </div><!-- #tabs -->
  <div class="clear"> </div>
    <div id="logo">
      <img src="images/logo.png">
    </div><!-- #logo -->
  
<%= yield %>

</body>
</html>
